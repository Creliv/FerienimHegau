<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ferienimhegau">

    <uses-permission android:name="android.permision.CALL_PHONE"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_fewo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_fewo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CalcActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/calc_header"></activity>
        <activity
            android:name=".GalleryActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/gallery_header"></activity>
        <activity
            android:name=".InfoActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/info_header"></activity>
        <activity
            android:name=".kalenderActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/kalender_header"></activity>
        <activity
            android:name=".ColorActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/kalender_header"></activity>
    </application>


</manifest>